[core]
	pager = delta
	untrackedcache = true
[init]
	defaultbranch = master
[commit]
	verbose = true
[branch]
	autosetuprebase = always
[diff]
	mnemonicprefix = true
	algorithm = histogram
	colormoved = default
	submodule = log
	tool = ediffclient
	guitool = ediffclient-g
[delta]
	features = colors-dark decorations line-numbers
	word-diff-regex = "\\S+"
[delta "colors-dark"]
	dark = true
	minus-style = syntax "#4f0000"
	minus-emph-style = syntax bold "#c81010"
	plus-style = syntax "#004f00"
	plus-emph-style = syntax bold "#10c810"
[delta "colors-light"]
	light = true
	minus-style = syntax "#ffe0e0"
	minus-emph-style = syntax bold "#ffc0c0"
	plus-style = syntax "#d0ffd0"
	plus-emph-style = syntax bold "#a0efa0"
[delta "decorations"]
	file-style = yellow bold ul
	file-decoration-style = none
	commit-decoration-style = yellow bold box
	hunk-header-style = file line-number syntax
	hunk-header-decoration-style = cyan box ul
[delta "line-numbers"]
	line-numbers-left-style = cyan
	line-numbers-right-style = cyan
	line-numbers-minus-style = 124
	line-numbers-plus-style = 28
[difftool]
	prompt = false
[difftool "ediffclient"]
	cmd = emacsclient --tty --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"
[difftool "ediffclient-g"]
	cmd = emacsclient --create-frame --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"
[merge]
	conflictstyle = diff3
	tool = emergeclient
	guitool = emergeclient-g
[mergetool "emergeclient"]
	cmd = emacsclient --tty --eval \"\
(if (file-readable-p \\\"$BASE\\\") \
    (ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\") \
  (ediff-merge-files \\\"$LOCAL\\\" \\\"$REMOTE\\\" nil \\\"$MERGED\\\"))\"
	prompt = false
[mergetool "emergeclient-g"]
	cmd = emacsclient --create-frame --eval \"\
(if (file-readable-p \\\"$BASE\\\") \
    (ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\") \
  (ediff-merge-files \\\"$LOCAL\\\" \\\"$REMOTE\\\" nil \\\"$MERGED\\\"))\"
	prompt = false
[rebase]
	autostash = true
	autosquash = true
	abbreviatecommands = true
	stat = true
[status]
	short = true
	branch = true
	showstash = true
	submodulesummary = true
[rerere]
	enabled = true
[interactive]
	singlekey = true
	difffilter = delta --color-only
[fetch]
	all = true
	prune = true
	jobs = 10
	showforcedupdates = true
[pull]
	rebase = true
[push]
	autosetupremote = true
	default = current
	followtags = true
[credential]
	helper = cache --timeout 3600
[color]
	ui = true
[color "diff-highlight"]
	oldnormal = red bold
	oldhighlight = red bold 52
	newnormal = green bold
	newhighlight = green bold 22
[color "branch"]
	current = green reverse
	local = yellow
	remote = red
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow
	untracked = red
[include]
	path = config.local
