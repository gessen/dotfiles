[core]
	pager = delta
	untrackedcache = true
[branch]
	autosetuprebase = always
	sort = committerdate
	sort = HEAD
[color]
	ui = true
[color "branch"]
	current = green reverse
[color "diff"]
	meta = yellow
	frag = blue
	commit = yellow bold
[color "status"]
	changed = yellow
[commit]
	verbose = true
[credential]
	helper = cache --timeout 3600
[delta]
	features = colors-dark decorations line-numbers
	word-diff-regex = "\\S+"
[delta "colors-dark"]
	dark = true
	minus-style = syntax "#4f0000"
	minus-emph-style = syntax bold "#c81010"
	plus-style = syntax "#004f00"
	plus-emph-style = syntax bold "#10c810"
[delta "colors-light"]
	light = true
	minus-style = syntax "#ffe0e0"
	minus-emph-style = syntax bold "#ffc0c0"
	plus-style = syntax "#d0ffd0"
	plus-emph-style = syntax bold "#a0efa0"
[delta "decorations"]
	file-style = yellow bold ul
	file-decoration-style = none
	commit-decoration-style = yellow bold box
	hunk-header-style = file line-number syntax
	hunk-header-decoration-style = cyan box ul
[delta "line-numbers"]
	line-numbers-left-style = cyan
	line-numbers-right-style = cyan
	line-numbers-minus-style = 124
	line-numbers-plus-style = 28
[diff]
	mnemonicprefix = true
	algorithm = histogram
	colormoved = default
	submodule = log
	tool = ediffclient
	guitool = ediffclient-g
[difftool]
	prompt = false
[difftool "ediffclient"]
	cmd = emacsclient --tty --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"
[difftool "ediffclient-g"]
	cmd = emacsclient --create-frame --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"
[fetch]
	prune = true
	all = true
	showforcedupdates = true
	parallel = 0
[init]
	defaultbranch = master
[interactive]
	singlekey = true
	difffilter = delta --color-only
[merge]
	conflictstyle = diff3
	tool = emergeclient
	guitool = emergeclient-g
[mergetool "emergeclient"]
	cmd = emacsclient --tty --eval \"\
(if (file-readable-p \\\"$BASE\\\") \
    (ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\") \
  (ediff-merge-files \\\"$LOCAL\\\" \\\"$REMOTE\\\" nil \\\"$MERGED\\\"))\"
	prompt = false
[mergetool "emergeclient-g"]
	cmd = emacsclient --create-frame --eval \"\
(if (file-readable-p \\\"$BASE\\\") \
    (ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\") \
  (ediff-merge-files \\\"$LOCAL\\\" \\\"$REMOTE\\\" nil \\\"$MERGED\\\"))\"
	prompt = false
[pull]
	rebase = true
[push]
	autosetupremote = true
	default = current
	followtags = true
[rebase]
	stat = true
	autosquash = true
	autostash = true
	abbreviatecommands = true
	updaterefs = true
[rerere]
	enabled = true
[status]
	short = true
	branch = true
	showstash = true
	submodulesummary = true
[include]
	path = config.local
