[user]
	name = Jacek Swierk
	email = jacek.swierk@gmail.com
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
[commit]
	verbose = true
[branch]
	autosetuprebase = always
[diff]
	mnemonicprefix = true
	algorithm = patience
	submodule = log
	tool = ediffclient
	guitool = ediffclient-g
[difftool "ediffclient"]
	cmd = emacsclient --tty --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"
	prompt = false
[difftool "ediffclient-g"]
	cmd = emacsclient --create-frame --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"
	prompt = false
[merge]
	tool = emergeclient
	guitool = emergeclient-g
[mergetool "emergeclient"]
	cmd = emacsclient --tty --eval \"\
(if (file-readable-p \\\"$BASE\\\") \
    (ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\") \
  (ediff-merge-files \\\"$LOCAL\\\" \\\"$REMOTE\\\" nil \\\"$MERGED\\\"))\"
	prompt = false
[mergetool "emergeclient-g"]
	cmd = emacsclient --create-frame --eval \"\
(if (file-readable-p \\\"$BASE\\\") \
    (ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\") \
  (ediff-merge-files \\\"$LOCAL\\\" \\\"$REMOTE\\\" nil \\\"$MERGED\\\"))\"
	prompt = false
[rebase]
	autostash = true
	autosquash = true
	abbreviatecommands = true
	stat = true
[status]
	short = true
	branch = true
	showstash = true
	submodulesummary = true
[rerere]
	enabled = true
[interactive]
	singlekey = true
[pull]
	rebase = true
[push]
	followtags = true
[credential]
	helper = cache --timeout 3600
[color]
	ui = true
[color "diff-highlight"]
	oldnormal = red bold
	oldhighlight = red bold 52
	newnormal = green bold
	newhighlight = green bold 22
[color "branch"]
	current = green reverse
	local = yellow
	remote = red
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow
	untracked = red
[alias]
	fixup = !GIT_SEQUENCE_EDITOR=true git rebase -i
