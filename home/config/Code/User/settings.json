{
    "editor.codeLens": false,
    "editor.detectIndentation": true,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.rulers": [
        80,
        100,
        120
    ],
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "all",
    "editor.selectionClipboard": false,
    "editor.snippetSuggestions": "top",
    "editor.tabSize": 4,
    "[cmake]": {
        "editor.tabSize": 2
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "workbench.colorTheme": "Solarized Dark",
    "workbench.iconTheme": "vscode-icons",
    "workbench.list.keyboardNavigation": "filter",
    "workbench.settings.editor": "json",
    "workbench.settings.useSplitJSON": true,
    "workbench.tree.indent": 16,
    "window.restoreWindows": "none",
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 1,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.ccls-cache": true,
        "**/build": true,
        "**/build-*": true,
        "**/*.o": true,
        "**/*.d": true
    },
    "files.hotExit": "off",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": false,
    "files.watcherExclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.ccls-cache": true,
        "**/build": true,
        "**/build-*": true,
        "**/*.o": true,
        "**/*.d": true
    },
    "explorer.confirmDelete": false,
    "search.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.ccls-cache": true,
        "**/build": true,
        "**/build-*": true,
        "**/*.o": true,
        "**/*.d": true
    },
    "search.smartCase": false,
    "search.useIgnoreFiles": false,
    "debug.inlineValues": true,
    "extensions.showRecommendationsOnlyOnDemand": true,
    "problems.decorations.enabled": false,
    "telemetry.enableTelemetry": false,
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.keymap": "alternate",
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,
    "python.formatting.provider": "yapf",
    "python.formatting.yapfPath": "/usr/bin/yapf2",
    "python.jediEnabled": true,
    "python.jediPath": "/usr/lib/python2.7/site-packages",
    "python.linting.enabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.maxNumberOfProblems": 100,
    "python.linting.pep8Args": [],
    "python.linting.pep8Enabled": true,
    "python.linting.pep8Path": "pycodestyle",
    "python.linting.pylintEnabled": false,
    "python.linting.pep8CategorySeverity.E": "Error",
    "python.linting.pep8CategorySeverity.W": "Warning",
    "python.pythonPath": "/usr/bin/python2",
    "git.confirmSync": false,
    "cmake.configureArgs": [
        "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
    ],
    "cmake.configureOnOpen": false,
    "cmake.useCMakeServer": true,
    "ccls.cache.directory": ".ccls-cache",
    "ccls.clang.excludeArgs": [
        "-mabi=lp64"
    ],
    "ccls.clang.extraArgs": [
        "-Weverything",
        "-Wno-c++98-compat",
        "-Wno-c++98-compat-pedantic",
        "-Wno-covered-switch-default",
        "-Wno-global-constructors",
        "-Wno-exit-time-destructors",
        "-Wno-documentation",
        "-Wno-padded",
        "-Wno-unneeded-member-function",
        "-Wno-unused-member-function",
        "-Wno-language-extension-token",
        "-Wno-gnu-zero-variadic-macro-arguments",
        "-Wno-gnu-statement-expression",
        "-Wno-unused-macros",
        "-Wno-error"
    ],
    "ccls.codeLens.localVariables": false,
    "ccls.codeLens.renderInline": false,
    "ccls.completion.caseSensitivity": 1,
    "ccls.completion.detailedLabel": true,
    "ccls.completion.enableSnippetInsertion": true,
    "ccls.highlighting.enabled.enumConstants": true,
    "ccls.highlighting.enabled.enums": true,
    "ccls.highlighting.enabled.freeStandingFunctions": true,
    "ccls.highlighting.enabled.freeStandingVariables": true,
    "ccls.highlighting.enabled.globalVariables": true,
    "ccls.highlighting.enabled.macros": true,
    "ccls.highlighting.enabled.memberFunctions": true,
    "ccls.highlighting.enabled.memberVariables": true,
    "ccls.highlighting.enabled.namespaces": true,
    "ccls.highlighting.enabled.parameters": true,
    "ccls.highlighting.enabled.staticMemberFunctions": true,
    "ccls.highlighting.enabled.staticMemberVariables": true,
    "ccls.highlighting.enabled.templateParameters": true,
    "ccls.highlighting.enabled.typeAliases": true,
    "ccls.highlighting.enabled.types": true,
    "ccls.index.blacklist": [
        ".*CMakeFiles.*"
    ],
    "ccls.launch.args": [
        "-log-file=/tmp/ccls.log",
        "-v=1"
    ],
    "bashIde.path": "/usr/bin/bash-language-server",
    "shellcheck.customArgs": [
        "--shell=bash",
        "--external-sources"
    ],
    "shellcheck.exclude": [
        "SC2059"
    ],
    "shellcheck.run": "onSave",
    "shellformat.flag": "-i 4",
    "remote.SSH.showLoginTerminal": true,
    "remote.SSH.defaultExtensions": [
        "ccls-project.ccls",
        "eamodio.gitlens",
        "ms-vscode.sublime-keybindings",
        "ryzngard.vscode-header-source",
        "shardulm94.trailing-spaces",
        "twxs.cmake",
        "vector-of-bool.cmake-tools",
        "webfreak.debug",
        "xaver.clang-format"
    ],
    "remote.containers.defaultExtensions": [
        "ccls-project.ccls",
        "eamodio.gitlens",
        "ms-vscode.sublime-keybindings",
        "ryzngard.vscode-header-source",
        "shardulm94.trailing-spaces",
        "twxs.cmake",
        "vector-of-bool.cmake-tools",
        "webfreak.debug",
        "xaver.clang-format"
    ]
}
